<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall"
    android:orientation="horizontal"
    android:showDividers="none"
    android:baselineAligned="false">

    <TextView
        android:id="@id/pair_number_text"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/list_pair_number_back_color"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000"
        android:textSize="18sp"
        tools:text="1"
        android:gravity="center" />

    <TextView
        android:id="@id/pair_time_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        tools:text="10:00 - 11:20"
        android:textSize="15sp"
        android:layout_weight="3"
        android:gravity="center"
        android:ellipsize="marquee"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" />

    <TextView
        android:id="@id/pair_discip_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        tools:text="Комп. мережі (ЛКГ)"
        android:textSize="15sp"
        android:layout_weight="5"
        android:gravity="center"
        android:ellipsize="marquee"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" />

    <TextView
        android:id="@id/pair_type_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        tools:text="Лек."
        android:textSize="15sp"
        android:layout_weight="2"
        android:gravity="center"
        android:ellipsize="marquee"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" />

    <TextView
        android:id="@id/pair_aud_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        tools:text="Дв-314"
        android:textSize="15sp"
        android:gravity="center"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_weight="3"
        android:ellipsize="marquee" />

</LinearLayout>