<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:orientation="horizontal"
    android:showDividers="none"
    android:background="@color/list_break_back_color">

    <TextView
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@color/list_break_back_color" />

    <TextView
        android:id="@id/break_time_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="8:00 - 9:20"
        android:textSize="12sp"
        style="@style/SmartskedTheme.NoPair"
        android:background="@color/list_break_back_color"
        android:textColor="@color/list_break_text_color"
        android:layout_weight="3.5"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/list_break_back_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/break_text"
        android:textSize="12sp"
        style="@style/SmartskedTheme.NoPair"
        android:textColor="@color/list_break_text_color"
        android:layout_weight="8.5"
        android:gravity="center" />

</TableRow>