<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:showDividers="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:orientation="horizontal">

        <TextView
            android:id="@id/pair_number_text"
            style="@style/SmartskedTheme.NoPair"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#F0F5FA"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="1" />

        <TextView
            android:id="@id/pair_time_text"
            style="@style/SmartskedTheme.NoPair"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:background="#fff"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            tools:text="8:00 - 9:20" />

        <TextView
            style="@style/SmartskedTheme.NoPair"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            android:background="#fff"
            android:gravity="center"
            android:text="@string/no_pair_desc_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:showDividers="none"
        android:background="@color/list_break_back_color" >

        <TextView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@color/list_break_back_color" />

        <TextView
            style="@style/SmartskedTheme.NoPair"
            tools:text="8:00 - 9:20"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp"
            android:background="@color/list_break_back_color"
            android:textColor="@color/list_break_text_color"
            android:layout_weight="3.5"
            android:gravity="center" />

        <TextView
            style="@style/SmartskedTheme.NoPair"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/list_break_back_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/break_text"
            android:textSize="12sp"
            android:textColor="@color/list_break_text_color"
            android:layout_weight="8.5"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>